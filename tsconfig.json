{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": ".build",
    "rootDir": "./",
    "baseUrl": ".",
    "strict": false,
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "isolatedModules": false,
    "lib": [
      "es6",
      "dom"
    ],
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@src/*" : ["src/*"],
      "@prisma/client": ["./node_modules/@prisma/client"]
    },
    "esModuleInterop":true
  },
  "include": [
    "src/**/*",
    "prisma/**/*",
  ],
  "exclude": [
    "node_modules"
  ]
}
